# =============================================================================
# NovaCMS - Example environment
# =============================================================================

# Node
NODE_ENV=development
PORT=4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://novacms:novacms@localhost:5432/novacms?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Object storage (S3 compatible; e.g., MinIO)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=novacms
S3_FORCE_PATH_STYLE=true

# Auth / security
JWT_SECRET=change-me
SESSION_SECRET=change-me-too

# Public URLs
PUBLIC_WEB_URL=http://localhost:3000
PUBLIC_ADMIN_URL=http://localhost:3001
PUBLIC_API_URL=http://localhost:4000

# Contact
SUPPORT_EMAIL=support@cajeer.com
SECURITY_EMAIL=security@cajeer.com
