{
  "name": "novacms",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "author": "TheSkiF4er",
  "homepage": "https://cajeer.com/NovaCMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSkiF4er/NovaCMS.git"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier . --write",
    "db:migrate": "pnpm -C packages/db prisma migrate dev",
    "db:seed": "pnpm -C packages/db db:seed",
    "db:studio": "pnpm -C packages/db prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.3.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript": "^5.5.0"
  }
}
